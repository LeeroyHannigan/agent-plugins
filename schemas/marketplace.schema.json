{
  "$id": "https://awslabs.github.io/agent-plugins/schemas/marketplace.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for marketplace.json registry file",
  "properties": {
    "metadata": {
      "properties": {
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "name": {
      "pattern": "^[a-z][a-z0-9-]*$",
      "type": "string"
    },
    "owner": {
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "plugins": {
      "items": {
        "properties": {
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "keywords": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "name": {
            "pattern": "^[a-z][a-z0-9-]*$",
            "type": "string"
          },
          "source": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "properties": {
                  "github": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  }
                },
                "type": "object"
              }
            ]
          },
          "tags": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "source"
        ],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": [
    "name",
    "owner",
    "metadata",
    "plugins"
  ],
  "title": "Marketplace Registry",
  "type": "object"
}
